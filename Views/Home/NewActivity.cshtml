@{
    ViewData["Title"] = "New Wedding";
}

@model Activ
<div class="text-center">
       <p class="lead"><a href="/Home"> Home </a> | <a href="/Logout">Logout</a> </a></p> 
</div>
    
    <h2 class="display-4 text-center"> Add a New Activity Event</h2>

    <form asp-action="CreateActivity" method="post">
        <div class="form-group">
            
            <span style="color: red;" asp-validation-for="Title"></span><br>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
        </div>

        <div class="form-group">
            <span style="color: red;" asp-validation-for="Time"></span><br>
            <label asp-for="Time"></label>
            <input asp-for="Time" class="form-control">
        </div>
        <div class="form-group">
            <span style="color: red;" asp-validation-for="Date"></span><br>
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" type="Date">
        </div>
        <div class="form-group">
            <span style="color: red;" asp-validation-for="Duration"></span><br>
            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" type="text">
        </div>
        <div class="form-group">
            <span style="color: red;" asp-validation-for="DurationTimeset"></span><br>
            <label for="DurationTimeSet">Duration Time Frame:</label>
            <select class="form-control" asp-for="DurationTimeset">
                <option value="Hours">Hours</option>
                <option value="Minutes">Minutes</option>
                <option value="Days">Days</option>
            </select>
        </div>
        <div class="form-group">
            <span style="color: red;" asp-validation-for="Description"></span><br>
            <label asp-for="Description"></label><br>
            <textarea asp-for="Description"cols="95" ></textarea>
        </div>
        <br>
        <button type="submit" value="Add New Activity" class="btn btn-outline-primary">Create Activity</button>
    </form>
